<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toumingse"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_yuanjiao_baise"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/txt_balck"
                        android:text="@string/kehufuwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/huise"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"/>
                <!--下面的4个格子-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    >
                    <!--这里是第一个横向格子-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/ll_layout_kaibuqisuo"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/kaibulesuo"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:text="@string/kaibuqisuo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <!--这里是 一条竖线-->
                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <View
                                android:background="@color/huise2"
                                android:layout_width="0.4dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_layout_guzhang"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <LinearLayout

                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:src="@drawable/faxianguzhang"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp" />
                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:text="@string/faxianyushanguzhang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <!--这里是 一条横线-->
                    <LinearLayout
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@color/huise2"
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"/>
                    </LinearLayout>

                    <!-- 这里是第2个横向格子-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:id="@+id/ll_layout_jubao"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/jubao"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:text="@string/jubaoweixiu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <View
                                android:background="@color/huise2"
                                android:layout_width="0.4dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_layout_qitawenti"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/qitawenti"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:text="@string/qitawent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


    </RelativeLayout>







</RelativeLayout>