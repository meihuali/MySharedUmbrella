<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_layout_close"
                android:orientation="vertical"
                android:layout_marginRight="50dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/guanbi_x"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <View
                    android:layout_gravity="center"
                    android:background="@color/huise"
                    android:layout_width="0.1dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/ll_layout_close"
                android:id="@+id/popup_anima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_yuanjiao_baise"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rlceshi"
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="21dp"
                            android:textSize="16sp"
                            android:text="@string/shenqingsanzuo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginRight="17dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_jian"
                                android:src="@drawable/shoppingjian_x"
                                android:layout_width="29dp"
                                android:layout_height="21dp" />

                            <TextView
                                android:id="@+id/tv_sums"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/lanse_x_x"
                                android:text="@string/ling"
                                android:layout_width="80dp"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/imge_add"
                                android:src="@drawable/shoppingjiahao_x"
                                android:layout_width="29dp"
                                android:layout_height="21dp" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="21dp"
                            android:textSize="16sp"
                            android:text="@string/shenqingyusan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginRight="17dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_yusan_jian"
                                android:src="@drawable/shoppingjian_x"
                                android:layout_width="29dp"
                                android:layout_height="21dp" />
                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/shoppingjian_x"
                                android:layout_width="29dp"
                                android:layout_height="21dp" />
                            <TextView
                                android:id="@+id/tv_yusans"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/lanse_x_x"
                                android:text="@string/shibai"
                                android:layout_width="80dp"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/img_yusan_add"
                                android:src="@drawable/shoppingjiahao_x"
                                android:layout_width="29dp"
                                android:layout_height="21dp" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_marginTop="20dp"
                        android:background="@color/huise"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="19dp"
                            android:textSize="18sp"
                            android:text="@string/gongxu"
                            android:textColor="@color/lanse_x_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/lanse_x_x"
                            android:layout_marginLeft="20dp"
                            android:text="@string/jinbi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_shoppingYJ"
                            android:textSize="20sp"
                            android:textColor="@color/lanse_x_x"
                            android:text="@string/sanbai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_gravity="bottom"
                            android:background="@color/huise"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.1dp"/>
                        <ImageView
                            android:src="@drawable/zhifubaozhifu_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="@color/lanse_x_x"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/xuanzhezhifu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:src="@drawable/weixinzhifu_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_gravity="bottom"
                            android:background="@color/huise"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textColor="@color/white"
                            android:background="@drawable/jianbian_x"
                            android:text="@string/queren"
                            android:layout_width="100dp"
                            android:layout_height="45dp" />
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


</RelativeLayout>