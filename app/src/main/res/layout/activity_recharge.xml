<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/dingbujianbian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/image_back"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:textColor="@color/white"
                android:textSize="19sp"
                android:gravity="center"
                android:text="@string/qianbaochongzhi"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/shenhuise_x"
            android:textSize="18sp"
            android:text="@string/chongzhijiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textColor="@color/white"
                android:id="@+id/btn_yibaiyuan"
                android:background="@drawable/jianbian_x"
                android:layout_marginLeft="15dp"
                android:text="@string/yibaiyuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
            <Button
                android:background="@drawable/button_yuanjiaokongxin_lanse"
                android:id="@+id/btn_wushiyuan"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/wushiyuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/button_yuanjiaokongxin_lanse"
                android:id="@+id/btn_ershiyuan"
                android:layout_marginLeft="15dp"
                android:text="@string/ershiyuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
            <Button
                android:background="@drawable/button_yuanjiaokongxin_lanse"
                android:id="@+id/btn_shiyuan"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/shiyuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>

       <!--充值方式 微信 支付宝-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/weixin_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/weixinzhifu_x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/weixin_icon"
                android:gravity="center"
                android:text="@string/weixin"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_llay_weixin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_weixin_gouxuan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dagou_x" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="15dp"
            android:background="@color/huise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/zhifubao_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/zhifubaozhifu_x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/zhifubao_icon"
                android:gravity="center"
                android:text="@string/zhifubao"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_llay_zhifubao"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_zhifubao_weigouxuan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/budagou_x" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="65dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:textColor="@color/qianheise"
            android:textSize="12sp"
            android:gravity="center"
            android:text="@string/chongzhiwenzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_Recharge"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/quchongzhis"
            android:background="@drawable/jianbian_x"
            android:layout_width="132dp"
            android:layout_height="50dp" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>