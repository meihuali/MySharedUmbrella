<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toumingse"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/popup_anima"
            android:padding="15dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_yuanjiao_baise"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_close"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/close_x"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/lanse"
                android:textSize="18sp"
                android:id="@+id/tv_zongyajin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/tishi"/>

            <TextView
                android:layout_marginTop="34dp"
                android:textColor="@color/lanse"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:id="@+id/tx_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tuikuanjiner"/>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/lanse"
                        android:text="ï¿¥"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_jiners"
                        android:textColor="@color/lanse"
                        android:textSize="20sp"
                        android:text="@string/jiner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_jianhao"
                        android:src="@drawable/jianhao_x"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_add"
                        android:src="@drawable/jiahao_x"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/huise"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.02dp" />

            <RelativeLayout
                android:layout_marginBottom="21dp"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_tukuan"
                    android:textColor="@color/white"
                    android:text="@string/queding"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/jianbian_x"
                    android:layout_width="80dp"
                    android:layout_height="35dp" />
            </RelativeLayout>
        </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>