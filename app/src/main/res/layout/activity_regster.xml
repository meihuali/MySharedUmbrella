<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@drawable/zhujiemlanse_x"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_back"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/wodeqianbaos"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_mingxi"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/mingxi"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="130px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80px"
            android:src="@drawable/huanyingning_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:textSize="33sp"
            android:textColor="@color/lanse_x_x"
            android:text="@string/huanyingshiyong"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_marginTop="90px"
        android:textColor="@color/qianhuise2"
        android:hint=" 请输入手机号码"
        android:layout_marginRight="98px"
        android:layout_marginLeft="98px"
        android:background="@drawable/button_yuanjiaokongxin"
        android:layout_width="match_parent"
        android:layout_height="126px" />

    <EditText
        android:id="@+id/edit_pwd"
        android:textSize="16sp"
        android:layout_marginTop="90px"
        android:textColor="@color/qianhuise2"
        android:hint=" 请输入密码"
        android:layout_marginRight="98px"
        android:layout_marginLeft="98px"
        android:background="@drawable/button_yuanjiaokongxin"
        android:layout_width="match_parent"
        android:layout_height="42dp" />
        <LinearLayout
            android:layout_marginTop="90px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_verifycode"
                android:textSize="16sp"
                android:textColor="@color/qianhuise2"
                android:hint=" 请输入验证码"
                android:layout_marginLeft="98px"
                android:background="@drawable/button_yuanjiaokongxin"
                android:layout_width="200dp"
                android:layout_height="126px" />
            <Button
                android:id="@+id/tv_hqyzm"
                android:textColor="@color/white"
                android:text="@string/huoquyanzhengma"
                android:background="@drawable/jianbian_x"
                android:layout_width="99dp"
                android:layout_height="35dp" />
        </LinearLayout>
    <EditText
        android:id="@+id/ed_names"
        android:textSize="16sp"
        android:layout_marginTop="90px"
        android:textColor="@color/qianhuise2"
        android:hint=" 输入昵称"
        android:layout_marginRight="98px"
        android:layout_marginLeft="98px"
        android:background="@drawable/button_yuanjiaokongxin"
        android:layout_width="match_parent"
        android:layout_height="126px" />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_register"
            android:textColor="@color/white"
            android:text="@string/zhuce"
            android:background="@drawable/jianbian_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <View
                    style="@style/line"
                    android:layout_marginTop="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="手机号:"
                        android:textColor="#ffc7c7cd"
                        android:textSize="18sp" />

                    <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
                        android:id="@+id/edit_phones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="请输入收号码"
                        android:inputType="numberDecimal"
                        android:textSize="18sp" />
                </LinearLayout>

                <View style="@style/line" />

                <View
                    style="@style/line"
                    android:layout_marginTop="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="密   码:"
                        android:textColor="#ffc7c7cd"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edit_pwds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="请设置您的密码"
                        android:inputType="textPassword"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/eye" />

                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="验证码:"
                        android:textColor="#ffc7c7cd"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edit_verifycodes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="输入验证码"
                        android:inputType="phone"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_hqyzms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ssa"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <View style="@style/line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yonghuming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/yonghuming"
                        android:textColor="#ffc7c7cd"
                        android:textSize="18sp" />

                    <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
                        android:id="@+id/ed_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="可以随便填写用户名"
                        android:inputType="text"
                        android:textSize="18sp" />
                </LinearLayout>

                <View style="@style/line" />

                <Button
                    android:id="@+id/btn_registers"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/ssa"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="注册"
                    android:textColor="@color/txt_while"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/choice_n" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我已阅读并同意"
                        android:textColor="#ffc7c7cd" />

                    <TextView
                        android:id="@+id/textssaView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《"
                        android:textColor="#ffc7c7cd" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于共享雨伞的说明"
                        android:textColor="#fffe7625" />

                    <TextView
                        android:id="@+id/textView2ss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="》"
                        android:textColor="#ffc7c7cd" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>