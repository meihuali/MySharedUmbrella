<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/dingbujianbian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/image_backs"
                android:background="@drawable/btn_back"
                android:layout_width="30dp"
                android:layout_height="26dp" />
            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_marginTop="31dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_layrl"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:text="@string/changyongdizhi"
                android:textColor="@color/shenhuise_x"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_dakaixiaoxi"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="29dp"
                android:src="@drawable/youjiantou_x" />


        </RelativeLayout>
        <View
            android:layout_marginTop="30dp"
            android:background="@color/qianhuise"
            android:layout_width="match_parent"
            android:layout_height="0.02dp"/>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:id="@+id/rl_guanyuwomen"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:text="@string/guanyuwomen"
                android:textColor="@color/shenhuise_x"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="29dp"
                android:src="@drawable/youjiantou_x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/rl_yjshuoming"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:text="@string/yajinshuoming"
                android:textColor="@color/shenhuise_x"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/youjiantou_x"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/rl_yjshuomings"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:text="@string/yonghuxieyi"
                android:textColor="@color/shenhuise_x"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="29dp"
                android:src="@drawable/youjiantou_x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/rl_lejie"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:text="@string/chongzhishuoming"
                android:textColor="@color/shenhuise_x"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="29dp"
                android:src="@drawable/youjiantou_x" />
        </RelativeLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="44dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_exits"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:background="@drawable/jianbian_x"
                android:text="@string/tuichudenglu"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>