<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:text="@string/gaosheng"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_hone"
            android:text="@string/shoujihaoma"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address"
            android:text="@string/dizhi"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_toStartOf="@+id/tv_detle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:id="@+id/ll_layoutSeclet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_budagou"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/budagou_x"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/img_dagou"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/dagou_x"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_edit"
                android:textColor="@color/lanse_x_x"
                android:gravity="center"
                android:text="@string/bianji"
                android:background="@drawable/button_yuanjiaokongxin_lanse"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <TextView
            android:textColor="@color/lanse_x_x"
            android:id="@+id/tv_detle"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/shanchu"
            android:background="@drawable/button_yuanjiaokongxin_lanse"
            android:layout_width="50dp"
            android:layout_height="30dp" />

    </RelativeLayout>

    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="0.4dp" />
</LinearLayout>