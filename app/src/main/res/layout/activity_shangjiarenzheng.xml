<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/dingbujianbian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/image_back"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:textColor="@color/white"
                android:textSize="19sp"
                android:gravity="center"
                android:text="@string/shangjiarenzheng"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/lanse"
            android:layout_marginLeft="15dp"
            android:text="@string/qingpaizhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_user_tu"
                android:background="@color/huise"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <ImageView
                android:id="@+id/img_open_photo"
                android:src="@drawable/paizhao_x"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_address"
                android:hint="@string/qingshurudizhi"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@color/huise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_comints"
                android:textColor="@color/white"
                android:background="@drawable/jianbian_x"
                android:layout_gravity="bottom"
                android:text="@string/tijiao"
                android:layout_width="132dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>