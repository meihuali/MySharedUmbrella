<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/dingbujianbian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/ll_flayout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/image_backs"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_back"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toEndOf="@+id/tv_adds" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/ruzhuziliao"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/textView3" />
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/lanse_x_x"
                android:text="@string/shangjiamingchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:backgroundTint="@color/huise"
                android:textColor="@color/shenhuise_x"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/lanse_x_x"
                android:text="@string/shangjiadizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:backgroundTint="@color/huise"
                android:textColor="@color/shenhuise_x"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/lanse_x_x"
            android:textSize="14sp"
            android:text="@string/qingpaishe"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="190dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/img_paizhao"
                android:scaleType="fitXY"
                android:src="@drawable/ruzhushangjia_x"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/paizhao_x"
                android:layout_gravity="center"
                android:layout_width="62dp"
                android:layout_height="62dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_layout_qianyue"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/img_qianyueweigouxuan"
            android:src="@drawable/qianyueweigouxuan_x"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_qianyuegouxuan"
            android:visibility="gone"
            android:src="@drawable/qianyugouxuan_x"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:text="@string/qianyuexieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_comit"
            android:textColor="@color/white"
            android:text="@string/tijiao"
            android:background="@drawable/jianbian_x"
            android:layout_width="130dp"
            android:layout_height="48dp" />
    </LinearLayout>

</LinearLayout>