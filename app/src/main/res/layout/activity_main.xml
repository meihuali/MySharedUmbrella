<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.administrator.mysharedumbrella01.ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@color/zhutiyanse">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_backs"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/santiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/gongxiangyusan"
            android:textColor="@color/top_color2"
            android:textSize="20sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_adds"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="35dp" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/zhutiyanse"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_marginRight="25dp"
            android:id="@+id/btn_jiesan"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/image_conent"
            android:text="@string/jiesao"
            android:textColor="@color/txt_while"
            android:textSize="16sp" />

        <Button
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_scatcs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/image_conent"
            android:text="@string/saoyisao"
            android:textColor="@color/txt_while"
            android:textSize="18sp" />
        <Button
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_haisan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:text="@string/haisan"
            android:textColor="@color/txt_while"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.amap.api.maps.MapView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/btn_scatc"
                android:layout_width="132dp"
                android:layout_height="50dp"
                android:background="@drawable/saoyisao"
                android:textColor="@color/txt_while"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_kehu"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/kehu"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>

