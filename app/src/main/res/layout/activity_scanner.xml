<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toumingse"
    >

    <RelativeLayout
        android:background="@color/zhutiyanse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/image_back"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/white"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/gongxiangyus"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout">

    <com.mylhyl.zxing.scanner.ScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/toggleButton" />
        <Button
        android:visibility="gone"
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="相册" />


        <ToggleButton
            android:textOn="@string/kongbai"
            android:textOff="@string/kongbai"
            android:layout_marginBottom="10dp"
            android:background="@drawable/guanbidengpao"
            android:layout_gravity="center_horizontal|bottom"
            android:id="@+id/toggleButton"
            android:layout_width="45dp"
            android:layout_height="50dp"
            />
        <ToggleButton
            android:visibility="gone"
            android:textOn="@string/kongbai"
            android:textOff="@string/kongbai"
            android:id="@+id/img_open"
            android:layout_marginBottom="15dp"
            android:background="@drawable/guanbidengpao"
            android:layout_gravity="center|bottom"
            android:layout_width="45dp"
            android:layout_height="50dp" />

    </FrameLayout>
</RelativeLayout>
