<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/ll_layoutss"
    >

    <ImageView
        android:src="@drawable/wodeqianbao_x"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/rl_layoutssss"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_back"
            android:background="@drawable/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/shangjiagerenxinxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_layouts"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_yuanxing"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/liuyifei"
                app:civ_border_color="@color/lanse_x"
                app:civ_border_width="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/tv_name" />


        </LinearLayout>




        <ScrollView
            android:id="@+id/sv_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_marginLeft="110dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/qianbao_x"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_sanzuosan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="@string/shanzuo"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/top_red"
                        android:id="@+id/tv_jiner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/image_qianbao"
                        android:gravity="center"
                        android:text="@string/jiner" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/backs" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_layoutGoods"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_marginLeft="110dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/qianbao_x"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_huowuqianshou"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="@string/huowuqianshou"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/top_red"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/image_qianbao"
                        android:gravity="center"
                        android:text="@string/jiner" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/image_qianbao"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/backs" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_layout_jilu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView

                        android:layout_marginLeft="110dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/wodexingcheng_x"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/img_updata"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="@string/tupiangenggai"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/backs" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_lyout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginLeft="110dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/yaoqinghaoyou_x"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_shopping_jilu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="@string/jilu"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/backs" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rl_layout_settings"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginLeft="110dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/shezhi_x"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="@string/tv_settings"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/backs" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>