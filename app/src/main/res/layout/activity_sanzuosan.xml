<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_layout_aimn"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_back"
        android:background="@color/lanse_x_x"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_back"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/white"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/sanzuosan"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <!---->
    <LinearLayout
        android:id="@+id/ll_layout_addres"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/yushan1"
                android:layout_width="30dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="@string/shouhuoren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_addressName"
                    android:text="@string/meihuali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_marginLeft="30dp"
                    android:text="@string/shoujihaoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_address"
                    android:text="@string/dizhi"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/backs"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

    <!---->
    <View
        android:layout_marginTop="10dp"
        android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:text="@string/xianyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/sanzuowei3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/gongyou2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_sanzuo"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/yusanshuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/gongyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_yusan"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>


    <RelativeLayout
        android:id="@+id/rlceshi"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:textSize="16sp"
            android:text="@string/shenqingsanzuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_jian"
                android:src="@drawable/shoppingjian_x"
                android:layout_width="29dp"
                android:layout_height="21dp" />

            <TextView
                android:id="@+id/tv_sums"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/lanse_x_x"
                android:text="@string/ling"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/imge_add"
                android:src="@drawable/shoppingjiahao_x"
                android:layout_width="29dp"
                android:layout_height="21dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:textSize="16sp"
            android:text="@string/shenqingyusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_yusan_jian"
                android:src="@drawable/shoppingjian_x"
                android:layout_width="29dp"
                android:layout_height="21dp" />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/shoppingjian_x"
                android:layout_width="29dp"
                android:layout_height="21dp" />
            <TextView
                android:id="@+id/tv_yusans"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/lanse_x_x"
                android:text="0"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/img_yusan_add"
                android:src="@drawable/shoppingjiahao_x"
                android:layout_width="29dp"
                android:layout_height="21dp" />
        </LinearLayout>
    </RelativeLayout>
    <View

        android:layout_marginTop="10dp"
        android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="19dp"
            android:textSize="18sp"
            android:text="@string/gongxu"
            android:textColor="@color/lanse_x_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/lanse_x_x"
            android:layout_marginLeft="20dp"
            android:text="@string/jinbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shoppingYJ"
            android:textSize="20sp"
            android:textColor="@color/lanse_x_x"
            android:text="@string/sanbai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_gravity="bottom"
            android:background="@color/huise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.1dp"/>
        <ImageView
            android:src="@drawable/zhifubaozhifu_x"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_gravity="bottom"
            android:textColor="@color/lanse_x_x"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/xuanzhezhifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/weixinzhifu_x"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <View
            android:layout_gravity="bottom"
            android:background="@color/huise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.1dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/white"
            android:background="@drawable/jianbian_x"
            android:text="@string/shenqing"
            android:layout_width="100dp"
            android:layout_height="45dp" />
    </LinearLayout>


</LinearLayout>