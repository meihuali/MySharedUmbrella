<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sbackzmm" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="找回密码"
            android:textColor="#fffe7625"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/myback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="返回"
            android:textColor="#fffe7625"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <View
            style="@style/line"
            android:layout_marginTop="58dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/teSxtView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机号"
                android:textColor="#ffc7c7cd"
                android:textSize="16sp" />

            <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
                android:id="@+id/edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint=""
                android:inputType="phone"
                android:textSize="18sp" />
        </LinearLayout>

        <View style="@style/line" />

        <View
            style="@style/line"
            android:layout_marginTop="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textFView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="验证码"
                android:textColor="#ffc7c7cd"
                android:textSize="16sp" />

            <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
                android:id="@+id/zym_sznew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint=""
                android:inputType="phone"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hqmm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:text="获取验证码"
                android:textColor="#fffe7625"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/line" />

        <View
            style="@style/line"
            android:layout_marginTop="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textdFView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="输入密码"
                android:textColor="#ffc7c7cd"
                android:textSize="16sp" />

            <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
                android:id="@+id/new_serpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint=""
                android:inputType="textPassword"
                android:textSize="18sp" />
        </LinearLayout>

        <View style="@style/line" />

        <Button
            android:id="@+id/szpass_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:background="@drawable/ssa"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>