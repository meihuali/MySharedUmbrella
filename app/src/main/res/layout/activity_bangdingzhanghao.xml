<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/zhutiyanse"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_back"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/white"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/shoujiyanzheng"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:id="@+id/image_yuanxing"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/liuyifei"
        app:civ_border_color="@color/mediumorchid"
        app:civ_border_width="2dp" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_sanfangName"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/sanfangwenzi"
        android:textColor="@color/txt_main"
        android:textSize="17sp" />
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        style="@style/line"
        android:layout_marginTop="20dp" />
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号:"
            android:textColor="#ffc7c7cd"
            android:textSize="18sp" />

        <com.example.administrator.mysharedumbrella01.utils.EditTextWithDelete
            android:id="@+id/edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ems="10"
            android:hint="请输入收号码"
            android:inputType="numberDecimal"
            android:textSize="18sp" />
    </LinearLayout>
    <View style="@style/line"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />

    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        style="@style/line"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="验证码:"
            android:textColor="#ffc7c7cd"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_verifycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ems="10"
            android:hint="输入验证码"
            android:inputType="phone"
            android:textSize="18sp" />

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/tv_hqyzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ssa"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
    <View style="@style/line"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/btn_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/ssa"
        android:paddingTop="10dp"
        android:text="@string/queding"
        android:textColor="@color/txt_while"
        android:textSize="18sp" />

</LinearLayout>