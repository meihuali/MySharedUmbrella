<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/button_yuanjiao_baise">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/update_img" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="软件更新提示"
        android:textColor="@color/juse"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_update_title"
        android:textColor="@color/txt_main"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="共享雨伞震撼上线" />

    <TextView
        android:layout_gravity="center"
        android:textColor="@color/line2"
        android:gravity="center_vertical"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:lineSpacingExtra="3dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_update_title"
        android:layout_centerHorizontal="true" />

    <com.example.administrator.mysharedumbrella01.utils.UpdataProgressBar
        android:id="@+id/round_flikerbar"
        android:layout_width="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="20dp"
        app:loadingColor="#40c4ff"
        app:radius="20dp"
        app:stopColor="#ff9800"
        android:visibility="gone"
        app:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_below="@+id/tv_content"
        android:orientation="horizontal" >
        <Button
            android:text="取消"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/txt_main"
            android:background="@drawable/button_yuanjiaokongxin"
            />

        <Button
            android:textColor="@android:color/white"
            android:text="确定"
            android:background="@drawable/ssa"
            android:id="@+id/btn_confirm"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>
