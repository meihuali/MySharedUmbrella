<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.administrator.mysharedumbrella01.ui.MainActivity">


    <RelativeLayout
        android:background="@drawable/zhujiemlanse_x"
        android:id="@+id/ll_flayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/image_backs"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/santiao"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/tv_adds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/gongxiangyusan"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/textView3" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_adds"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="35dp" />
    </RelativeLayout>



    <LinearLayout
        android:visibility="gone"
        android:background="@color/zhutiyanse"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_marginRight="25dp"
            android:id="@+id/btn_jiesan"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/image_conent"
            android:text="@string/jiesao"
            android:textColor="@color/txt_while"
            android:textSize="16sp" />

        <Button
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_scatcs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/image_conent"
            android:text="@string/saoyisao"
            android:textColor="@color/txt_while"
            android:textSize="18sp" />
        <Button
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_haisan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:text="@string/haisan"
            android:textColor="@color/txt_while"
            android:textSize="16sp" />
    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/tv_current"
            android:layout_marginTop="5dp"
            android:background="@drawable/jiesanxianshi_x"
            android:layout_width="160dp"
            android:layout_height="30dp">
            <Button
                android:layout_marginBottom="5dp"
                android:id="@+id/btn_cuonst"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:text="3"
                android:layout_width="25dp"
                android:layout_height="match_parent" />
        </RelativeLayout>


        <com.amap.api.maps.MapView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/ll_xxxx"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:id="@+id/image_shuaxin"
                android:layout_marginBottom="15dp"
                android:src="@drawable/shauxin_x"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/plgig"
                android:layout_centerInParent="true"
                android:layout_width="138dp"
                android:layout_height="138dp"
                android:src="@drawable/saomiaojianbian_x"
                />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/image_kehu"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/jingao_x"
                android:layout_width="45dp"
                android:layout_height="45dp" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>

